---
// src/pages/index.astro

// 页面元数据
import ToolList from '../components/ToolList.vue';
import { tools } from '../data/tools';

const pageTitle = "RuanTools - 在线工具集合";
const description = "一个实用的在线工具集合，包含 JSON 格式化、Base64 编解码等常用开发工具。";
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{pageTitle}</title>
    
    <style>
      :root {
        --primary: #2563eb;
        --primary-light: #3b82f6;
        --bg-color: #ffffff;
        --surface-color: #f8fafc;
        --border-color: #e2e8f0;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --text-tertiary: #94a3b8;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --radius-md: 8px;
        --radius-lg: 12px;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--bg-color);
        color: var(--text-primary);
        line-height: 1.5;
        min-height: 100vh;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }
      
      /* 头部样式 */
      .header {
        padding: 40px 0 30px;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 40px;
      }
      
      .site-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 8px;
      }
      
      .site-subtitle {
        font-size: 1rem;
        color: var(--text-secondary);
        margin-bottom: 16px;
      }
      
      .site-meta {
        display: flex;
        gap: 20px;
        font-size: 0.875rem;
        color: var(--text-tertiary);
      }
      
      .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
      }
      
      .meta-item::before {
        content: "•";
        color: var(--primary-light);
      }
      
      /* 页脚样式 */
      .footer {
        padding: 40px 0;
        border-top: 1px solid var(--border-color);
        margin-top: 60px;
        text-align: center;
      }
      
      .footer-content {
        max-width: 600px;
        margin: 0 auto;
      }
      
      .footer-text {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 16px;
      }
      
      .footer-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
      }
      
      .footer-link {
        font-size: 0.875rem;
        color: var(--primary);
        text-decoration: none;
      }
      
      .footer-link:hover {
        text-decoration: underline;
      }
      
      /* 使用说明 */
      .usage-note {
        background: rgba(37, 99, 235, 0.05);
        border: 1px solid rgba(37, 99, 235, 0.2);
        border-radius: var(--radius-md);
        padding: 16px;
        margin-top: 30px;
      }
      
      .usage-title {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 8px;
      }
      
      .usage-text {
        font-size: 0.875rem;
        color: var(--text-secondary);
        line-height: 1.5;
      }
    </style>
  </head>
  
  <body>
    <div class="container">
      <!-- 网站头部 -->
      <header class="header">
        <h1 class="site-title">RuanTools</h1>
        <p class="site-subtitle">简洁实用的在线工具集合，专为开发者设计</p>
        <div class="site-meta">
          <span class="meta-item">本地运行 · 无需上传</span>
          <span class="meta-item">完全免费 · 无需注册</span>
          <span class="meta-item">持续更新 · 开源项目</span>
        </div>
      </header>
      
      <!-- 主要工具区域 - 使用 Vue 组件 -->
      <main>
        <ToolList client:load />
        
        <!-- 使用说明 -->
        <div class="usage-note">
          <div class="usage-title">使用说明</div>
          <p class="usage-text">
            所有工具均在您的浏览器本地运行，数据不会上传到任何服务器。
            如果您发现任何问题或有新工具建议，欢迎在 GitHub 仓库提交 Issue。
          </p>
        </div>
      </main>
      
      <!-- 页脚 -->
      <footer class="footer">
        <div class="footer-content">
          <p class="footer-text">
            © 2024 RuanTools
          </p>
          <p class="footer-text">
            项目开源地址：
          </p>
          <div class="footer-links">
            <a href="https://github.com/mcpackms/ruantools2" class="footer-link" target="_blank">GitHub</a>
            <a href="/ruantools2/issues" class="footer-link" target="_blank">问题反馈</a>
            <a href="https://astro.build" class="footer-link" target="_blank">Astro 框架</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
