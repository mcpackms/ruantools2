---
// src/pages/tools/ruanDl.astro
import { apps } from '../../data/appList.js';
import DownloadApp from '../../components/DownloadApp.vue';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <!-- SPDX-FileCopyrightText: 2026 联电远连 <work_rrvv@hotmi@hotmail.com> -->
  <!-- SPDX-License-Identifier: Apache-2.0 -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>软天空改版下载站 | Ruantools</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <style>
    :root {
      --primary-color: #007bff;
      --primary-dark: #0056b3;
      --background-color: #f8f9fa;
      --card-background: #ffffff;
      --text-primary: #1a1a1a;
      --text-secondary: #666666;
      --border-color: #eaeaea;
      --shadow-color: rgba(0, 0, 0, 0.08);
      --border-radius: 12px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
      line-height: 1.6;
      color: var(--text-primary);
      background: var(--background-color);
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0;
    }

    /* 头部样式 - 根据图片调整 */
    .site-header {
      text-align: center;
      margin-bottom: 40px;
      padding: 60px 20px;
      /* 根据图片中的紫色渐变背景 */
      background: linear-gradient(135deg, #8a2be2 0%, #4b0082 100%);
      color: white;
      position: relative;
      overflow: hidden;
      /* 移除圆角，使头部背景延伸到边缘 */
      border-radius: 0;
    }

    .site-title {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 12px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .site-description {
      font-size: 1.2rem;
      margin-bottom: 20px;
      opacity: 0.95;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .site-contact {
      font-size: 0.95rem;
      margin-bottom: 20px;
      opacity: 0.9;
    }

    .site-contact a {
      color: white;
      text-decoration: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);
      transition: border-color 0.3s ease;
    }

    .site-contact a:hover {
      border-color: white;
    }

    /* 下载提示框样式 - 根据图片调整 */
    .site-notice {
      background: rgba(255, 255, 255, 0.15);
      padding: 20px 30px;
      border-radius: 12px;
      display: inline-block;
      margin-top: 20px;
      font-size: 1.1rem;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      max-width: 800px;
      word-break: break-all;
      line-height: 1.6;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    /* 下载提示中的文字样式 */
    .notice-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 10px;
      display: block;
    }

    .notice-url {
      font-size: 1.1rem;
      background: rgba(255, 255, 255, 0.1);
      padding: 12px 16px;
      border-radius: 8px;
      margin: 12px 0;
      display: inline-block;
      border: 1px solid rgba(255, 255, 255, 0.3);
      word-break: break-all;
    }

    .notice-instruction {
      font-size: 1rem;
      opacity: 0.9;
      margin-top: 10px;
      display: block;
    }

    .site-notice a {
      color: #ffcc00;
      text-decoration: none;
      font-weight: 500;
    }

    .site-notice a:hover {
      text-decoration: underline;
    }

    /* 应用列表 - 对称的两列布局 */
    .app-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
      margin-bottom: 60px;
      padding: 0 20px;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }

    /* 确保每个卡片高度一致 */
    .app-card {
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .site-footer {
      text-align: center;
      padding: 30px 20px;
      margin-top: 60px;
      border-top: 1px solid var(--border-color);
      color: var(--text-secondary);
      font-size: 0.95rem;
    }

    .site-footer a {
      color: var(--primary-color);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .site-footer a:hover {
      color: var(--primary-dark);
      text-decoration: underline;
    }

    .license-info {
      margin-top: 12px;
      font-size: 0.875rem;
      opacity: 0.8;
    }

    /* 响应式设计 */
    @media (max-width: 992px) {
      .app-list {
        grid-template-columns: 1fr;
        max-width: 600px;
      }
    }

    @media (max-width: 768px) {
      .site-title {
        font-size: 2.2rem;
      }
      
      .site-description {
        font-size: 1.1rem;
      }
      
      .site-notice {
        font-size: 1rem;
        padding: 16px 20px;
      }
      
      .notice-title {
        font-size: 1.1rem;
      }
      
      .notice-url {
        font-size: 1rem;
        padding: 10px 14px;
      }
      
      .app-list {
        padding: 0 16px;
        gap: 24px;
      }
    }

    @media (max-width: 480px) {
      .site-title {
        font-size: 1.8rem;
      }
      
      .site-header {
        padding: 40px 16px;
      }
      
      .site-notice {
        padding: 14px 16px;
      }
      
      .app-list {
        padding: 0 12px;
        gap: 20px;
      }
    }

    /* 动画效果 */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .app-list > * {
      animation: fadeInUp 0.6s ease-out;
      animation-fill-mode: both;
    }

    .app-list > *:nth-child(1) { animation-delay: 0.1s; }
    .app-list > *:nth-child(2) { animation-delay: 0.2s; }
    .app-list > *:nth-child(3) { animation-delay: 0.3s; }
    .app-list > *:nth-child(4) { animation-delay: 0.4s; }
  </style>
</head>
<body>
  <div class="container">
    <header class="site-header">
      <h1 class="site-title">RuanTools</h1>
      <p class="site-description">经作者授权的改版应用集散地</p>
      <p class="site-contact">投稿或建议请联系: <a href="mailto:318940921@qq.com">318940921@qq.com</a></p>
      
      <div class="site-notice">
        <span class="notice-title">请复制网址</span>
        <div class="notice-url">https://ruantools.pages.dev/files/apk/ruansky</div>
        <span class="notice-instruction">到浏览器下载</span>
      </div>
    </header>

    <main class="app-list">
      {apps.map(app => (
        <DownloadApp client:load app={app} />
      ))}
    </main>

    <footer class="site-footer">
      <p>© 2023-2025 sl_ly. Licensed under <a href="https://www.apache.org/licenses/LICENSE-2.0" target="_blank" rel="noopener noreferrer">Apache 2.0</a>.</p>
      <p class="license-info">本网站所有应用均经过作者授权，请遵守相关使用条款</p>
    </footer>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // 添加下载统计
      document.querySelectorAll('.download-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
          const appName = this.getAttribute('title') || '未知应用';
          console.log(`用户点击下载: ${appName}`);
          
          // 这里可以添加实际的统计代码
          // 例如: fetch('/api/download-stats', { method: 'POST', body: JSON.stringify({ app: appName }) });
        });
      });
      
      // 添加滚动动画
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);
      
      // 观察所有应用卡片
      document.querySelectorAll('.app-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
      });
      
      // 添加URL点击复制功能
      const urlElement = document.querySelector('.notice-url');
      if (urlElement) {
        urlElement.style.cursor = 'pointer';
        urlElement.title = '点击复制URL';
        
        urlElement.addEventListener('click', async () => {
          const url = urlElement.textContent.trim();
          try {
            await navigator.clipboard.writeText(url);
            const originalText = urlElement.textContent;
            urlElement.textContent = '已复制到剪贴板!';
            urlElement.style.background = 'rgba(76, 175, 80, 0.2)';
            urlElement.style.borderColor = '#4CAF50';
            
            setTimeout(() => {
              urlElement.textContent = originalText;
              urlElement.style.background = 'rgba(255, 255, 255, 0.1)';
              urlElement.style.borderColor = 'rgba(255, 255, 255, 0.3)';
            }, 2000);
          } catch (err) {
            console.error('复制失败:', err);
            urlElement.textContent = '复制失败，请手动复制';
            setTimeout(() => {
              urlElement.textContent = url;
            }, 2000);
          }
        });
      }
    });
  </script>
</body>
</html>
