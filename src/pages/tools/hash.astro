---
// 页面元数据
const pageTitle = "哈希计算器 - RuanTools";
const description = "在线计算文本和文件的哈希值，支持 SHA-256、SHA-512、MD5 等多种算法";
import HashCalculator from '../../components/HashCalculator.vue';
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{pageTitle}</title>
    
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #f5f5f5;
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }

      .header {
        text-align: center;
        margin-bottom: 30px;
      }

      .header h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 10px;
      }

      .header p {
        color: #666;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1>哈希计算器</h1>
        <p>使用 Vue.js 实现的哈希计算工具</p>
      </header>
      
      <!-- Vue 组件 -->
      <HashCalculator client:load />
    </div>
  </body>
</html>
