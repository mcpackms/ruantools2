      // è®¡ç®—æ–‡ä»¶å“ˆå¸Œ
      async function calculateFileHash() {
        if (!selectedFile) {
          alert('è¯·é€‰æ‹©æ–‡ä»¶');
          return;
        }

        const algorithm = getSelectedAlgorithm();
        
        // æ£€æŸ¥åº“æ˜¯å¦åŠ è½½å®Œæˆ
        if (typeof window.CryptoJS === 'undefined' || typeof window.sha3_256 === 'undefined') {
          alert('å“ˆå¸Œåº“åŠ è½½å¤±è´¥ï¼Œè¯·åˆ·æ–°é¡µé¢é‡è¯•...');
          return;
        }

        showLoading('file');
        showProgress(0);

        try {
          const file = selectedFile;
          const arrayBuffer = await readFileAsArrayBuffer(file);
          
          let hash;
          
          if (algorithm.id.startsWith('sha3-')) {
            // SHA-3 éœ€è¦ç‰¹æ®Šå¤„ç†
            const hexString = arrayBufferToHex(arrayBuffer);
            hash = algorithm.id === 'sha3-256' ? window.sha3_256(hexString) : window.sha3_512(hexString);
          } else {
            // å…¶ä»–ç®—æ³•ä½¿ç”¨ CryptoJS
            const wordArray = window.CryptoJS.lib.WordArray.create(arrayBuffer);
            
            switch(algorithm.id) {
              case 'md5':
                hash = window.CryptoJS.MD5(wordArray).toString();
                break;
              case 'sha1':
                hash = window.CryptoJS.SHA1(wordArray).toString();
                break;
              case 'sha256':
                hash = window.CryptoJS.SHA256(wordArray).toString();
                break;
              case 'sha512':
                hash = window.CryptoJS.SHA512(wordArray).toString();
                break;
              default:
                hash = 'ä¸æ”¯æŒè¯¥ç®—æ³•';
            }
          }
          
          // æ˜¾ç¤ºæ–‡ä»¶ä¿¡æ¯
          showFileInfo(file);
          
          // æ˜¾ç¤ºç»“æœ
          displayResult(algorithm, hash);
          
        } catch (error) {
          console.error('å¤„ç†æ–‡ä»¶æ—¶å‡ºé”™:', error);
          alert('å¤„ç†æ–‡ä»¶æ—¶å‡ºé”™: ' + error.message);
        } finally {
          hideLoading('file');
          hideProgress();
        }
      }

      // æ˜¾ç¤ºå•ä¸ªç»“æœ
      function displayResult(algorithm, hash) {
