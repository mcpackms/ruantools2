          button.textContent = 'å·²å¤åˆ¶';
          button.classList.add('copied');
          setTimeout(() => {
            button.textContent = 'å¤åˆ¶å“ˆå¸Œå€¼';
            button.classList.remove('copied');
          }, 2000);
        }
      }

